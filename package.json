{
  "name": "advanced-menus",
  "version": "1.1.0",
  "description": "Easy to use and configurable HTML5 Menus",
  "main": "lib/index.js",
  "types": "lib/index",
  "repository": "https://github.com/coderehab/menus",
  "author": "Code.Rehab <info@code.rehab>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "watch": "tsc -w -d",
    "test": "jest src"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ],
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md,scss,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "html"
    ],
    "transform": {
      "^.+\\.html$": "<rootDir>/helpers/utils/htmlLoader.js"
    }
  },
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.14",
    "html-loader": "^0.5.5",
    "html-loader-jest": "^0.2.1",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "hyper-command-gifs": "^0.0.6"
  }
}
